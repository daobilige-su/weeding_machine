<launch>
    <param name="param_file" type="str" value=" $(find weeding_machine)/cfg/param.yaml" />

  <node name="usb_cam1" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <param name="video_device" value="/dev/video1" />
    <param name="image_width" value="640" />
    <param name="image_height" value="480" />
    <param name="pixel_format" value="yuyv" />
    <param name="color_format" value="yuv422p" />
    <param name="camera_frame_id" value="usb_cam" />
    <param name="io_method" value="mmap"/>
    <remap from="image" to="/usb_cam/image_raw1"/>
  </node>

    <node name="usb_cam2" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <param name="video_device" value="/dev/video0" />
    <param name="image_width" value="640" />
    <param name="image_height" value="480" />
    <param name="pixel_format" value="yuyv" />
    <param name="color_format" value="yuv422p" />
    <param name="camera_frame_id" value="usb_cam" />
    <param name="io_method" value="mmap"/>
    <remap from="image" to="/usb_cam/image_raw2"/>
  </node>

    <!--   rviz -->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find weeding_machine)/rviz/main.rviz"/>

    <!--     tf_manager -->
    <node pkg="weeding_machine" type="tf_manager.py" name="tf_manager" output="screen"/>

    <!--     lane_det -->
    <node pkg="weeding_machine" type="lane_det.py" name="lane_det" output="screen"/>

    <!--     weeder_cmd_serial_comm -->
    <node pkg="weeding_machine" type="weeder_cmd_serial_comm.py" name="weeder_cmd_serial_comm" output="screen"/>
</launch>
